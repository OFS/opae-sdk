rm -rf coverage_${target_name}
mkdir -p coverage_${target_name}

${test_command} ${TESTRUNNER_ARGS}
if [ "@COVERAGE_EXTRA@" = "1" ]; then
  mkdir -p coverage_${target_name}/nlb
  sleep 15
  for i in @COVERAGE_EXTRA_COMPONENTS@
  do
    # add individual element of the array
    find ${CMAKE_BINARY_DIR} -path "*$i.dir*" -iname "*.gc*" | xargs -i cp {} ${CMAKE_BINARY_DIR}/coverage_${target_name}/nlb
    find ${CMAKE_BINARY_DIR} -path "*$i-build*" -iname "*.gc*" | xargs -i cp {} ${CMAKE_BINARY_DIR}/coverage_${target_name}/nlb
  done
  # find ${CMAKE_BINARY_DIR} -iname "*.gc*"  | xargs -i cp {} ${CMAKE_BINARY_DIR}/coverage_${target_name}
fi

if [ "@COVERAGE_EXTRA2@" = "1" ]; then
  mkdir -p coverage_${target_name}/intr
  sleep 15
  for i in @COVERAGE_EXTRA_COMPONENTS2@
  do
    # add individual element of the array
    find ${CMAKE_BINARY_DIR} -path "*$i*.dir*" -iname "*.gc*" | xargs -i cp {} ${CMAKE_BINARY_DIR}/coverage_${target_name}/intr
    find ${CMAKE_BINARY_DIR} -path "*$i*-build*" -iname "*.gc*" | xargs -i cp {} ${CMAKE_BINARY_DIR}/coverage_${target_name}/intr
  done
  # find ${CMAKE_BINARY_DIR} -iname "*.gc*"  | xargs -i cp {} ${CMAKE_BINARY_DIR}/coverage_${target_name}
fi

find ${CMAKE_BINARY_DIR} -path "*${target_name}.dir*" -iname "*.gc*"  | xargs -i cp {} ${CMAKE_BINARY_DIR}/coverage_${target_name}
find ${CMAKE_BINARY_DIR} -path "*${target_name}-build*" -iname "*.gc*" | xargs -i cp {} ${CMAKE_BINARY_DIR}/coverage_${target_name}
echo "Finished running test."
