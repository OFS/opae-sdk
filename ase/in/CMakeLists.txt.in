cmake_minimum_required(VERSION 2.8.12)
project(ase-server)
set(CMAKE_MODULE_PATH ${CMAKE_MODULE_PATH} "${PROJECT_SOURCE}/cmake/modules")

include(compiler_config)
include(libraries_config)

set(INTEL_FPGA_API_VER_MAJOR @INTEL_FPGA_API_VER_MAJOR@  CACHE STRING "Intel FPGA API major version")
set(INTEL_FPGA_API_VER_MINOR @INTEL_FPGA_API_VER_MINOR@ CACHE STRING "Intel FPGA API minor version")
set(INTEL_FPGA_API_VER_REV   0  CACHE STRING "Intel FPGA API revision version")
set(INTEL_FPGA_API_VERSION   ${INTEL_FPGA_API_VER_MAJOR}.${INTEL_FPGA_API_VER_MINOR}.${INTEL_FPGA_API_VER_REV})
set(INTEL_FPGA_API_HASH      @GIT_COMMIT_HASH@)

set(ASE_SIMULATOR "QUESTA" CACHE STRING "SystemVerilog simulator tool")
set(ASE_PLATFORM "FPGA_PLATFORM_INTG_XEON" CACHE STRING "FPGA platform")
set(ASE_PLATFORM_IF "ccip_std_afu" CACHE STRING "FPGA AFU interface")
set(ASE_TIMESCALE "1ps/1ps" CACHE STRING "Simulator time-scale")

if(ASE_PLATFORM STREQUAL "FPGA_PLATFORM_INTG_XEON")
  set(ASE_PLATFORM_ABBREV "intg_xeon")
else()
  set(ASE_PLATFORM_ABBREV "intg_xeon")
endif()

add_subdirectory(rtl)
add_subdirectory(sw)
